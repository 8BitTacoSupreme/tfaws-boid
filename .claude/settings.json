{
  "mcpServers": {
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sqlite", "--db-path", "./memory/boid.db"]
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-fetch"]
    },
    "terraform": {
      "command": "npx",
      "args": ["-y", "terraform-mcp-server"]
    }
  },
  "permissions": {
    "allow": [
      "Bash(terraform:*)",
      "Bash(aws:*)",
      "Bash(localstack:*)",
      "Bash(tflint:*)",
      "Bash(tfsec:*)",
      "Bash(infracost:*)",
      "Bash(sqlite3:*)",
      "Bash(jq:*)",
      "Bash(podman:*)",
      "Bash(shellcheck:*)",
      "Bash(python3:*)",
      "Bash(node:*)",
      "Bash(npm:*)"
    ]
  }
}
